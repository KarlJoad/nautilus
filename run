#!/bin/bash
make clean

if [ "$1" != "clean" ] ; then
  ARCH=riscv CROSS_COMPILE=riscv64-unknown-elf- V=1 make -j

  if [ "$1" == "qemu" ] ; then
    echo 'Starting QEMU'
    qemu-system-riscv64 -nographic -smp 1 -m 128M -machine virt -bios none -kernel nautilus.bin -gdb tcp::1234
    make clean
  fi
fi
